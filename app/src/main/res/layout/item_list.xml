<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_aid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="13#"
            android:textStyle="bold"
            android:textSize="16sp" />
        <!--            #分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/h_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pic1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/sad_blind" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="求助"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_btime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-8-2 13:00"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/stream">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/history_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮助"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_stime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-8-2 13:00"
                    android:textSize="10sp" />
            </LinearLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/stream">
            </View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/happy_blind" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_etime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-8-2 13:00"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/h_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/waiting_blind" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="志愿者id"
                    android:textSize="16sp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/tv_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="武汉大学信息学部"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp" />


            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/defaultblue"
                android:background="@drawable/rounded_edittext_background"
                android:textColor="@color/white"
                android:text="反馈"
                android:id="@+id/button_jubao">

            </Button>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>